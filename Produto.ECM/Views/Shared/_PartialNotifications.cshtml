@using Produto.ECM.Extensions;
@{
    /**/

    var errorList = Html.GetNotifications(NotificationType.ERROR);
    var warningList = Html.GetNotifications(NotificationType.WARNING);
    var successList = Html.GetNotifications(NotificationType.SUCCESS);
    var infoList = Html.GetNotifications(NotificationType.INFO);
}
<!-- DISPLAY ERRORS -->
@if (errorList != null)
{
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @if (errorList.Count() > 1)
        {
            <strong><span class="glyphicon glyphicon-remove"></span>@string.Format(Resources.Resource1.ListaErro, @errorList.Count()) </strong>
            <ul>
                @foreach (String message in errorList)
                {
                    <li>@Html.Raw(message)</li>
                }
            </ul>
        }
        else
        {
            <strong><span class="glyphicon glyphicon-remove"></span> @Resources.Resource1.Erro </strong>
            @Html.Raw(errorList.First())
        }
    </div>
}

<!-- DISPLAY WARNINGS -->
@if (warningList != null)
{
    <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @if (warningList.Count() > 1)
        {
            <strong><span class="glyphicon glyphicon-warning-sign"></span>@string.Format(Resources.Resource1.ListaAtencao, @warningList.Count()) </strong>
            <ul>
                @foreach (String message in warningList)
                {
                    <li>@Html.Raw(message)</li>
                }
            </ul>
        }
        else
        {
            <strong><span class="glyphicon glyphicon-warning-sign"></span> @Resources.Resource1.Atencao </strong>
            @Html.Raw(warningList.First())
        }
    </div>
}

<!-- DISPLAY SUCCESS -->
@if (successList != null)
{
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @if (successList.Count() > 1)
        {
            <strong><span class="glyphicon glyphicon-ok"></span>@string.Format(Resources.Resource1.ListaSucesso, @successList.Count()) </strong>
            <ul>
                @foreach (String message in successList)
                {
                    <li>@Html.Raw(message)</li>
                }
            </ul>
        }
        else
        {
            <strong><span class="glyphicon glyphicon-ok"></span> @Resources.Resource1.Sucesso </strong>
            @Html.Raw(successList.First())
        }
    </div>
}

<!-- DISPLAY INFO LIST -->
@if (infoList != null)
{
    <div class="alert alert-info alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @if (infoList.Count() > 1)
        {
            <strong><span class="glyphicon glyphicon-info-sign"></span>@string.Format(Resources.Resource1.ListaInfo, @infoList.Count()) </strong>
            <ul>
                @foreach (String message in infoList)
                {
                    <li>@Html.Raw(message)</li>
                }
            </ul>
        }
        else
        {
            <strong><span class="glyphicon glyphicon-info-sign"></span> </strong>
            @Html.Raw(infoList.First())
        }
    </div>
}
<script type="text/javascript">
    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 4000);
</script>


